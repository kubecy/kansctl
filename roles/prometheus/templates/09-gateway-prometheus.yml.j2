---
apiVersion: gateway.networking.k8s.io/v1
kind: Gateway
metadata:
  name: prometheus-gateway
  namespace: monitoring
spec:
  gatewayClassName: traefik 
  listeners:
    - name: http
      protocol: HTTP
      port: 80
      hostname: prome.kubecy.com
---
apiVersion: gateway.networking.k8s.io/v1
kind: HTTPRoute
metadata:
  name: prometheus-route
  namespace: monitoring
spec:
  parentRefs:
    - name: prometheus-gateway
      namespace: monitoring
  hostnames:
    - prome.kubecy.com
  rules:
    - matches:
        - path:
            type: PathPrefix
            value: /
      backendRefs:
        - name: prometheus-svc
          port: 9090
