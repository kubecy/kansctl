---
apiVersion: v1
kind: Service
metadata:
  name: zk-headless
  namespace: moone
  labels:
    role: zookeeper
    app.kubernetes.io/name: zookeeper
    app.kubernetes.io/version: 3.8.5
spec:
  clusterIP: None
  ports:
  - name: server
    port: 2888
    targetPort: 2888
  - name: leader-election
    port: 3888
    targetPort: 3888
  - name: metrics
    port: 7000
    targetPort: 7000
  selector:
    role: zookeeper
    app.kubernetes.io/name: zookeeper
    app.kubernetes.io/version: 3.8.5
---
apiVersion: v1
kind: Service
metadata:
  name: zk-client
  namespace: moone
  labels:
    role: zookeeper
    app.kubernetes.io/name: zookeeper
    app.kubernetes.io/version: 3.8.5
spec:
  type: ClusterIP
  ports:
  - name: client
    port: 2181
    targetPort: 2181
  selector:
    role: zookeeper
    app.kubernetes.io/name: zookeeper
    app.kubernetes.io/version: 3.8.5
